<h1 class="text-center mt-2">My Collection</h1>
<div class="row mt-2 mb-4">
        <div class="player col-6 col-lg-3 game-player">
            <img src="https://i2-prod.liverpoolecho.co.uk/incoming/article18208664.ece/ALTERNATES/s615/0_CP41688995.jpg"
                 class="player-img-top img-fluid player-image">
            <div class="player-body">
                <h5 class="player-title text-center" data-toggle="tooltip" data-placement="bottom"
                    title="Dimitar Ivanov Berbatov is a Bulgarian former professional footballer. A striker, he captained the Bulgaria national team from 2006 to 2010, and is the country's all-time leading goalscorer.">
                    Dimitar Berbatov
                </h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">Striker</li>
                    <li class="list-group-item">
                        <span class="speed-stat">9</span><span class="endurance-stat">8</span>
                    </li>
                </ul>
                <a href="/Players/RemoveFromCollection?playerId=X" class="btn btn-block btn-danger">Remove from Collection</a>
            </div>
        </div>

    @if (Model.Count() == 0)
    {
            <h5>There are no add players yet!.</h5>
    }
    @if (Model.Count()>0)
    {
        @foreach (var player in Model)
        {
                          <div class="player col-6 col-lg-3 game-player">
                             <img src="@player.ImageUrl"
             class="player-img-top img-fluid player-image">
                                <div class="player-body">
                                    <h5 class="player-title text-center" data-toggle="tooltip" data-placement="bottom"
                title="@player.Title">
                        @player.Fullname
                                    </h5>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item text-center">@player.Position</li>
                                        <li class="list-group-item">
                                                            <span class="speed-stat">@player.Speed</span><span class="endurance-stat">@player.Endurance</span>
                                        </li>
                                    </ul>
                                    <a href="/Players/RemoveFromCollection?playerId=@player.Id" class="btn btn-block btn-danger">Remove from Collection</a>
                                </div>
                          </div>
        }
    }


    </div>
