<h1 class="text-center mt-2">All Players</h1>
<div class="row mt-2 mb-4">
    <div class="player col-6 col-lg-3 game-player">
        <img src="http://insport.bg/wp-content/uploads/2020/07/hristo-stoichkov.jpg"
             class="player-img-top img-fluid player-image">
        <div class="player-body">
            <h5 class="player-title text-center" data-toggle="tooltip" data-placement="bottom"
                title="Hristo Stoichkov Stoichkov born 8 February 1966 is a Bulgarian former professional footballer who is a football commentator for TUDN.">
                Hristo Stoichkov
            </h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">Striker</li>
                <li class="list-group-item">
                    @foreach (var player in Model)
                    {
                            <span>@player.Speed</span>
                    }
                    <span class="speed-stat">10</span><span class="endurance-stat">9</span>
                </li>
            </ul>
            <a href="/Players/AddToCollection?playerId=X" class="btn btn-block btn-primary">Add to Collection</a>
        </div>
    </div>


    @foreach (var player in Model)
    {
          <div class="player col-6 col-lg-3 game-player">
             <img src="@player.ImageUrl"
             class="player-img-top img-fluid player-image">
                <div class="player-body">
                    <h5 class="player-title text-center" data-toggle="tooltip" data-placement="bottom"
                title="@player.Title">
                            @player.Fullname
                    </h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">@player.Position</li>
                        <li class="list-group-item">
                                            <span class="speed-stat">@player.Speed</span><span class="endurance-stat">@player.Endurance</span>
                        </li>
                    </ul>
                    <a href="/Players/AddToCollection?playerId=X" class="btn btn-block btn-primary">Add to Collection</a>
                </div>
          </div>
    }


</div>
